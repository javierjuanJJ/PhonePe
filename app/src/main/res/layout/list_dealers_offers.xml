<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/bg_merchant"
    android:padding="5dp">

    <TextView
        android:id="@+id/discount_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="T and C apply *"
        android:gravity="end"
        android:textSize="6sp"></TextView>

    <TextView
        android:id="@+id/dealer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flipkart"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold|italic"></TextView>


    <TextView
        android:id="@+id/dealer_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:text="Flat"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dealer_off_price"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="50%"
        android:textColor="@color/black"></TextView>


    <TextView
        android:id="@+id/dealer_off_bw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Cashback"></TextView>

    <TextView
        android:id="@+id/discount_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="For new user only"></TextView>




</LinearLayout>